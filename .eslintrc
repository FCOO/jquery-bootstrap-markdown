{
    "env": {
        "browser": true,
        "jquery" : true,
        "es6"    : false
    },

    "extends": "eslint:recommended",
 
    "globals": {
        "$"         : false,
        "L"         : false,
        "undefined" : false,
        "moment"    : false,
        "Raven"     : false
    },

    "rules": {
        "strict"                    : "error",
        "camelcase"                 : "off",
        "no-mixed-spaces-and-tabs"  : "warn",
        "semi"                      : "warn",
        "no-extra-semi"             : "warn",
        "no-useless-escape"         : "off"
    }
}
